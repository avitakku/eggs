<!-- app/views/users/new.html.erb -->
<h2>Sign up</h2>

<%= form_for @user_information, url: user_registration_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :name %> *<br />
    <%= f.text_field :name, autofocus: true, required: true %>
  </div>
  <br>
  <div class="field">
    <%= f.label :username %> *<br />
    <%= f.text_field :username, required: true %>
  </div>
  <br>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <br>
  <div class="field">
    <%= f.label :photo_url %><br />
    <%= f.text_field :photo_url %>
  </div>
  <br>

  <div class="field">
    <%= f.label :contact_information, 'Email' %> *<br />
    <%= f.email_field :contact_information, autofocus: true, required: true %>
  </div>
  <br>


  <div class="field">
    <%= f.label :password %> *<br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", required: true %>

    <span class="error" id="password-error"></span>
  </div>
  <br>


  <div class="field">
    <%= f.label :password_confirmation %> *<br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
  </div>
<% end %>
