<% if @user_information.errors.any? %>
  <div class="alert alert-danger">
    <h4>Error(s) in the form. Please correct them.</h4>

    <ul>
      <% @user_information.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>Sign up</h2>

<%= form_for @user_information, url: user_registration_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :name %>*<br />
    <%= f.text_field :name, autofocus: true, required: true %>
  </div>
  <br>
  <div class="field">
    <%= f.label :username %>*<br />
    <%= f.text_field :username, required: true %>
  </div>
  <br>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <br>
  <div class="field">
    <%= f.label :photo_url, "Photo URL" %> <br />
    <%= f.text_field :photo_url %>
  </div>
  <br>

  <div class="field">
    <%= f.label :contact_information, 'Email*' %><br />
    <%= f.email_field :contact_information, autofocus: true, required: true %>
  </div>
  <br>


  <div class="field">
    <%= f.label :password, "Password*" %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>
  <br>


  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation*" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
  </div>
<% end %>
